rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Default deny all access
    match /{document=**} {
      allow read, write: if false;
    }
    
    // Helper function to check for authentication
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if the user is the owner of a document
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // Anyone authenticated can view a user's profile.
      allow get: if isAuthenticated();
      // Users can only create their own user document.
      allow create: if isOwner(userId);
      // Users can only update their own profile information.
      allow update: if isOwner(userId);
      // Allow authenticated users to list other users (e.g., for the neighbors page).
      allow list: if isAuthenticated();
    }
    
    // Rules for the 'posts' collection
    match /posts/{postId} {
      // Authenticated users can read all posts.
      allow read: if isAuthenticated();
      // Authenticated users can create posts.
      allow create: if isAuthenticated();
      // Only the author of the post can update or delete it.
      allow update, delete: if isAuthenticated() && isOwner(resource.data.userId);

      // Rules for 'comments' subcollection
      match /comments/{commentId} {
        // Authenticated users can read all comments.
        allow read: if isAuthenticated();
        // Authenticated users can create comments.
        allow create: if isAuthenticated();
        // Only the author of a comment can update or delete it.
        allow update, delete: if isAuthenticated() && isOwner(resource.data.userId);
      }
    }

    // Rules for the 'businesses' collection
    match /businesses/{businessId} {
      // Authenticated users can read all businesses.
      allow read: if isAuthenticated();
      // Authenticated users can create a business listing.
      allow create: if isAuthenticated();
      // Only the owner of the business listing can update or delete it.
      allow update, delete: if isAuthenticated() && isOwner(resource.data.ownerId);
    }
    
    // Rules for the 'friend_requests' collection
    match /friend_requests/{requestId} {
      // Can only be read by the sender or receiver of the request.
      allow read: if isAuthenticated() && (isOwner(resource.data.fromUserId) || isOwner(resource.data.toUserId));
      // Senders can create requests.
      allow create: if isAuthenticated() && isOwner(request.resource.data.fromUserId);
      // The receiver can update the status (accept/decline), but not change other fields.
      allow update: if isAuthenticated() && isOwner(resource.data.toUserId);
      // No one should be able to delete requests directly, they are updated to a final status.
      allow delete: if false;
    }
    
    // Rules for the 'conversations' collection (direct messages)
    match /conversations/{conversationId} {
      // Can only be read by participants in the conversation.
      allow read: if isAuthenticated() && request.auth.uid in resource.data.participantIds;
      // Allow creation by participants.
      allow create: if isAuthenticated() && request.auth.uid in request.resource.data.participantIds;
      // Participants can update (e.g., lastMessage).
      allow update: if isAuthenticated() && request.auth.uid in resource.data.participantIds;
      
      // Rules for 'messages' subcollection
      match /messages/{messageId} {
        // Can only be read by participants of the parent conversation.
        allow read: if isAuthenticated() && request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participantIds;
        // Participants can create messages.
        allow create: if isAuthenticated() && isOwner(request.resource.data.senderId) && request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participantIds;
      }
    }
    
    // Rules for the 'notifications' collection
    match /notifications/{notificationId} {
      // Can only be read or updated by the user the notification is for.
      allow read, update: if isAuthenticated() && isOwner(resource.data.userId);
    }
  }
}
