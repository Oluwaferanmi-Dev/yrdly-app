
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files
    match /{allPaths=**} {
      allow read;
    }

    // Allow users to manage their own avatar
    match /avatars/{userId}/{fileName} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow users to upload images for posts
    match /posts/{userId}/{allPaths=**} {
       allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow users to upload images for businesses
    match /businesses/{userId}/{allPaths=**} {
       allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow authenticated users to upload images to chats
    match /chat_images/{conversationId}/{allPaths=**} {
      allow write: if request.auth != null;
    }
  }
}
    