rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow users to read/write their own avatars
    match /avatars/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow users to upload post images
    match /posts/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow users to upload event images
    match /event_images/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow users to upload business images
    match /businesses/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to upload images to any chat
    match /chat_images/{conversationId}/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
